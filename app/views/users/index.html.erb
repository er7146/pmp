<div class="container">
  <div class="row">
 <div align="center">   <h3>Welcome <%= @user.name if @user.name %></h3>
  <br><br>
    <div align="center">
      <%= form_tag "/" do %>

<table>
  <tr>
    <th>My Files</th>
    <th>Product</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Re-Order</th>
    <th>Place New</th>
    <th>Line price</th>
  </tr>
  <% @products.each do |product| %>
    <% line = CartLine.find_by(cart_id: @cart.id, product_id: product.id) %>
    <tr>
      <td>
        <%= image_tag product.image_filename, class: "form-control" %>
      </td>
    
    
      <td>
          <%= product.name %>
      </td>
    
    
      <td>
          $<%= sprintf('%.2f', product.price_per_item) %> 
      </td>
    
    
      <td>
        <%= text_field_tag "quantity_#{product.id}", 
          line.quantity, class: "form-control" %>
      </td>
    
    
      <td>
        <%= submit_tag "Re-order", class: "form-control" %>
      </td>
    
      <td>
        <%= link_to "Place New", users_path %>
      </td>
    
      <td>
         $<%= sprintf('%.2f', line.line_price) %> 
      </td>
    </tr>
  <% end %>
</table>

<br clear="both">

<p>
  <b>Choose shipping method:</b><br>

  <% @ship_methods.each do |ship_method| %>

    <%= radio_button_tag :ship_method_id, ship_method.id,
      @cart.ship_method_id == ship_method.id %>
    <%= ship_method.name %> 
    $<%= sprintf('%.2f', ship_method.price_per_cart) %>
    + $<%= sprintf('%.2f', ship_method.price_per_item) %> each item
    <br>

  <% end %>

  <%= submit_tag "Update", class: "form-control" %>

  Shipping total is:
  $<%= sprintf('%.2f', @cart.ship_price) %>
</p>

<p>
  <b>Total price</b>
  $<%= sprintf('%.2f', @cart.total_price) %>
</p>

<% end %>
</div>
<br><br>
<form>
  <div class="form-group">
    <label for="exampleInputFile">Upload New File</label>
    <input type="file" id="exampleInputFile">
    <p class="help-block">PDF, JPEG, TIFF, EPS, PNG</p>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>
<div align="right"><br><br>
<%= image_tag "Bizcard_Template.jpg", width: 300 , height: "auto", alt: "biz_template" %>
<%#link_to (image_tag "Pepp_logo.png", width: 60 , height: "auto", alt: "Main")%>
</div>
</div>