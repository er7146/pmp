<h1>My Orders</h1>

<table border="1">

  <tr>
    <th>ID</th>
    <th>Order type</th>
    <th> type</th>
    <th>12 inch?</th>
    <th>Extra meat?</th>
    <th>Chips?</th>
    <th>Price</th>
    <th>Ordered at</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.stamp_type %></td>
      <td><%# order.bread_type %></td>
      <td><%# order.is_twelve_inch %></td>
      <td><%# order.has_extra_meat %></td>
      <td><%# order.has_chips %></td>
      <td>$<%= "%.2f" % order.total_price %></td>
      <td><%= order.created_at %></td>
    </tr>
  <% end %>

</table>